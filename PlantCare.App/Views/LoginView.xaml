<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="PlantCare.App.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PlantCare.App.ViewModels"
    Title="Login">

    <!--  Bind the Page's ViewModel  -->
    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout
        Padding="30"
        HorizontalOptions="FillAndExpand"
        Spacing="25"
        VerticalOptions="Center">

        <!--  Email Entry  -->
        <Entry
            x:Name="emailEntry"
            Keyboard="Email"
            Placeholder="Email"
            Text="{Binding Email}" />

        <!--  Password Entry  -->
        <Entry
            x:Name="passwordEntry"
            IsPassword="True"
            Placeholder="Password"
            Text="{Binding Password}" />

        <!--  Login Button  -->
        <Button
            Command="{Binding LoginCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Login" />

        <!--  Navigate to Registration Page Button  -->
        <Button Command="{Binding NavigateRegisterCommand}" Text="Register" />
    </VerticalStackLayout>
</ContentPage>