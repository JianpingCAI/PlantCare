<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="PlantCare.App.Views.PlantOverviewView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlantCare.App.Components"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:utils="clr-namespace:PlantCare.App.Utils"
    xmlns:views="clr-namespace:PlantCare.App.Views"
    xmlns:vm="clr-namespace:PlantCare.App.ViewModels"
    x:Name="thisPage"
    x:DataType="vm:PlantListOverviewViewModel">

    <Shell.TitleView>
        <Grid Padding="8,0" ColumnDefinitions="auto,auto,*">
            <Border
                HorizontalOptions="Start"
                Stroke="Transparent"
                StrokeThickness="0"
                VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                <Image
                    HeightRequest="40"
                    Source="default_plant.png"
                    WidthRequest="40" />
            </Border>

            <HorizontalStackLayout Grid.Column="1" Spacing="4">
                <Label
                    Margin="12,0,0,0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BodyStyle}"
                    Text="{Binding Path=[MyPlants], Source={x:Static utils:LocalizationManager.Instance}}"
                    VerticalTextAlignment="Center" />
                <Label
                    Style="{StaticResource BodyStyle}"
                    Text="{Binding Plants.Count, StringFormat='({0})'}"
                    VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <!--  Add Plant Button with entrance animation  -->
            <Button
                x:Name="fabButton"
                Grid.Column="2"
                Margin="0,0,8,0"
                Command="{Binding AddPlantCommand}"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="End"
                Style="{StaticResource FabButtonStyle}"
                Text="&#xe147;"
                TextColor="{StaticResource White}"
                VerticalOptions="Center"
                WidthRequest="40">
                <Button.Shadow>
                    <Shadow
                        Brush="{StaticResource Primary}"
                        Opacity="0.3"
                        Radius="8"
                        Offset="0,4" />
                </Button.Shadow>
            </Button>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <utils:ProgressToColorConverter x:Key="ProgressToColorConverter" />

        <Style x:Key="progressBox" TargetType="BoxView">
            <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}" />
            <Setter Property="HeightRequest" Value="5" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="WidthRequest" Value="3" />
        </Style>
    </ContentPage.Resources>

    <!--  Main Layout  -->
    <Grid Padding="8,4,8,0">

        <Grid HorizontalOptions="Fill" RowDefinitions="auto,*">
            <!--  Enhanced Search Bar for quick filtering  -->
            <Border Margin="0,4,0,8" Style="{StaticResource EnhancedSearchBarStyle}">
                <SearchBar
                    BackgroundColor="Transparent"
                    CancelButtonColor="{AppThemeBinding Light={StaticResource Gray900},
                                                        Dark={StaticResource Gray100}}"
                    Placeholder="{Binding Path=[SearchPlantByName], Source={x:Static utils:LocalizationManager.Instance}}"
                    PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600},
                                                       Dark={StaticResource Gray400}}"
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding SearchText}"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                Dark={StaticResource White}}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  Plants Collection View  -->
            <RefreshView
                Grid.Row="1"
                Command="{Binding RefreshPlantStatesCommand}"
                IsRefreshing="{Binding IsPlantStatesRefreshing}">
                <CollectionView
                    ItemsSource="{Binding Plants}"
                    ItemsUpdatingScrollMode="KeepItemsInView"
                    RemainingItemsThreshold="10"
                    SelectedItem="{Binding SelectedPlant, Mode=TwoWay}"
                    SelectionChangedCommand="{Binding SelectPlantCommand}"
                    SelectionMode="Single">

                    <!--  Empty State View  -->
                    <CollectionView.EmptyView>
                        <Grid>
                            <!--  Show skeleton cards while loading  -->
                            <ScrollView IsVisible="{Binding IsLoading}">
                                <Grid Padding="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Row 1  -->
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />

                                    <!--  Row 2  -->
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />

                                    <!--  Row 3  -->
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                </Grid>
                            </ScrollView>

                            <!--  Show empty state when not loading and no plants  -->
                            <components:EmptyStateView
                                Title="{Binding Path=[NoPlants], Source={x:Static utils:LocalizationManager.Instance}}"
                                ActionCommand="{Binding AddPlantCommand}"
                                ActionText="{Binding Path=[AddPlant], Source={x:Static utils:LocalizationManager.Instance}}"
                                HasAction="True"
                                IconSource="default_plant.png"
                                IsVisible="{Binding IsLoading, Converter={toolkit:InvertedBoolConverter}}"
                                Message="{Binding Path=[AddMyPlants], Source={x:Static utils:LocalizationManager.Instance}}" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="8"
                            Orientation="Vertical"
                            Span="{Binding Source={x:Reference thisPage}, Path=BindingContext.PhotoSpan}"
                            VerticalItemSpacing="8" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:PlantListItemViewModel">
                            <Grid HorizontalOptions="Center">
                                <!--  Interactive Card with Press Effects  -->
                                <Border Padding="0,0,0,10" Style="{StaticResource InteractiveCardStyle}">
                                    <StackLayout Spacing="5">
                                        <!--  Photo  -->
                                        <Border
                                            HorizontalOptions="Center"
                                            Stroke="Transparent"
                                            StrokeThickness="0"
                                            VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <Image
                                                Aspect="AspectFill"
                                                HeightRequest="{Binding Source={RelativeSource AncestorType={x:Type vm:PlantListOverviewViewModel}}, Path=PhotoHeight}"
                                                HorizontalOptions="Center"
                                                Source="{Binding ThumbnailPath}"
                                                VerticalOptions="Center"
                                                WidthRequest="{Binding Source={RelativeSource AncestorType={x:Type vm:PlantListOverviewViewModel}}, Path=PhotoWidth}" />
                                        </Border>

                                        <!--  Plant Name  -->
                                        <Label
                                            Margin="0,0,0,0"
                                            HorizontalTextAlignment="Center"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"
                                            Style="{StaticResource TitleSmallStyle}"
                                            Text="{Binding Name}" />

                                        <!--  Watering Section with Enhanced ProgressBar  -->
                                        <Grid ColumnDefinitions="auto,*" ColumnSpacing="6">
                                            <Label
                                                Grid.Column="0"
                                                FontFamily="MaterialIconsRegular"
                                                Style="{StaticResource TitleStyle}"
                                                Text="&#xe798;"
                                                TextColor="{Binding WaterState, Converter={StaticResource ProgressToColorConverter}}"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <ProgressBar
                                                Grid.Column="1"
                                                Margin="0,0,5,0"
                                                Progress="{Binding WaterState}"
                                                ProgressColor="{Binding WaterState, Converter={StaticResource ProgressToColorConverter}}"
                                                Style="{StaticResource RoundedProgressBarStyle}"
                                                VerticalOptions="Center" />
                                        </Grid>

                                        <!--  Fertilization Section with Enhanced ProgressBar  -->
                                        <Grid ColumnDefinitions="auto,*" ColumnSpacing="6">
                                            <Label
                                                Grid.Column="0"
                                                FontFamily="MaterialIconsRegular"
                                                Style="{StaticResource TitleStyle}"
                                                Text="&#xe761;"
                                                TextColor="{Binding FertilizeState, Converter={StaticResource ProgressToColorConverter}}"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <ProgressBar
                                                Grid.Column="1"
                                                Margin="0,0,5,0"
                                                Progress="{Binding FertilizeState}"
                                                ProgressColor="{Binding FertilizeState, Converter={StaticResource ProgressToColorConverter}}"
                                                Style="{StaticResource RoundedProgressBarStyle}"
                                                VerticalOptions="Center" />
                                        </Grid>

                                    </StackLayout>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!--  Loading overlay for non-initial operations  -->
        <components:LoadingOverlayView IsVisible="{Binding IsLoading}" />
    </Grid>
</views:ContentPageBase>
