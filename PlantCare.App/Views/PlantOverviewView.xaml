<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="PlantCare.App.Views.PlantOverviewView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layouts="clr-namespace:PlantCare.App.Layouts"
    xmlns:utils="clr-namespace:PlantCare.App.Utils"
    xmlns:views="clr-namespace:PlantCare.App.Views"
    xmlns:vm="clr-namespace:PlantCare.App.ViewModels"
    Title="My Plants"
    x:DataType="vm:PlantListOverviewViewModel">
    <ContentPage.Resources>
        <!--  Style used by the CollectionView selection  -->
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <utils:ProgressToColorConverter x:Key="ProgressToColorConverter" />
    </ContentPage.Resources>
    <!--  Main Layout  -->
    <Grid>
        <Grid Padding="5,2,5,0" RowDefinitions="auto,*">
            <!--  Search Bar for quick filtering  -->
            <SearchBar
                Placeholder="Search plants by name"
                SearchCommand="{Binding SearchCommand}"
                Text="{Binding SearchText}"
                TextChanged="SearchBar_TextChanged"
                VerticalOptions="Center" />

            <!--  Plants Collection View  -->
            <CollectionView
                Grid.Row="1"
                EmptyView="No plants found. Add a new plant to get started!"
                ItemsSource="{Binding Plants}"
                SelectedItem="{Binding SelectedPlant, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectPlantCommand}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PlantListItemViewModel">
                        <!--<Frame
                            Padding="10"
                            BorderColor="ForestGreen"
                            HorizontalOptions="Center"
                            InputTransparent="True"
                            VerticalOptions="Center">-->
                        <!--</Frame>-->
                        <Grid>
                            <Border
                                HorizontalOptions="Center"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Padding="0,0,0,10" HorizontalOptions="Center">
                                    <Border
                                        HorizontalOptions="Center"
                                        Stroke="Transparent"
                                        StrokeThickness="0"
                                        VerticalOptions="Center">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" />
                                        </Border.StrokeShape>
                                        <Image
                                            Aspect="AspectFill"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            Source="{Binding PhotoPath}"
                                            VerticalOptions="Center"
                                            WidthRequest="100" />
                                    </Border>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}" />
                                    <Grid Margin="0,0,0,5" ColumnDefinitions="15,*">
                                        <Label
                                            FontFamily="MaterialIconsRegular"
                                            Text="&#xe798;"
                                            TextColor="{Binding WaterState, Converter={StaticResource ProgressToColorConverter}}" />
                                        <ProgressBar
                                            Grid.Column="1"
                                            Margin="0,0,5,0"
                                            HeightRequest="5"
                                            Progress="{Binding WaterState}"
                                            ProgressColor="{Binding WaterState, Converter={StaticResource ProgressToColorConverter}}" />
                                    </Grid>
                                    <Grid Margin="0,0,0,5" ColumnDefinitions="15,*">
                                        <Label
                                            FontFamily="MaterialIconsRegular"
                                            Text="&#xe761;"
                                            TextColor="{Binding FertilizeState, Converter={StaticResource ProgressToColorConverter}}" />
                                        <ProgressBar
                                            Grid.Column="1"
                                            Margin="0,0,5,0"
                                            HeightRequest="5"
                                            Progress="{Binding FertilizeState}"
                                            ProgressColor="{Binding FertilizeState, Converter={StaticResource ProgressToColorConverter}}" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        HorizontalItemSpacing="0"
                        Orientation="Vertical"
                        Span="{OnIdiom Phone=3,
                                       Desktop=4}"
                        VerticalItemSpacing="3" />
                </CollectionView.ItemsLayout>
            </CollectionView>
        </Grid>

        <!--  Add Plant Button  -->

        <Button
            Margin="0,0,20,20"
            Command="{Binding AddPlantCommand}"
            CornerRadius="50"
            FontFamily="MaterialIconsRegular"
            FontSize="30"
            HorizontalOptions="End"
            Text="&#xe147;"
            VerticalOptions="End">
            <Button.Shadow>
                <Shadow
                    Brush="DeepSkyBlue"
                    Opacity="0.8"
                    Radius="15"
                    Offset="5,5" />
            </Button.Shadow>
        </Button>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" IsVisible="{Binding IsLoading}">
            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding IsLoading}"
                VerticalOptions="Center" />
        </Grid>

    </Grid>
</views:ContentPageBase>