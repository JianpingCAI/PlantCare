<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="PlantCare.App.Views.PlantOverviewView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:layouts="clr-namespace:PlantCare.App.Layouts"
    xmlns:views="clr-namespace:PlantCare.App.Views"
    xmlns:vm="clr-namespace:PlantCare.App.ViewModels"
    Title="My Plants"
    x:DataType="vm:PlantListOverviewViewModel">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <!--  Main Layout  -->
    <ScrollView>
        <VerticalStackLayout Padding="5" Spacing="10">

            <!--  Search Bar for quick filtering  -->
            <SearchBar
                Placeholder="Search plants..."
                SearchCommand="{Binding SearchCommand}"
                Text="{Binding SearchText}" />

            <!--  Plants Collection View  -->
            <CollectionView
                EmptyView="No plants found. Add a new plant to get started!"
                ItemsSource="{Binding Plants}"
                SelectedItem="{Binding SelectedPlant, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectPlantCommand}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PlantListItemViewModel">
                        <!--<Frame
                            Padding="10"
                            BorderColor="ForestGreen"
                            HorizontalOptions="Center"
                            InputTransparent="True"
                            VerticalOptions="Center">-->
                        <Border
                            Padding="10"
                            HorizontalOptions="Center"
                            Stroke="ForestGreen"
                            StrokeShape="RoundRectangle 10"
                            VerticalOptions="Center">
                            <VerticalStackLayout HorizontalOptions="Center">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="100"
                                    Source="{Binding PhotoPath}"
                                    WidthRequest="100" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="Center"
                                    Text="{Binding Name}" />
                                <HorizontalStackLayout HorizontalOptions="Start">
                                    <Label Text="State" />
                                    <Label Text="{Binding WaterState}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                        <!--</Frame>-->
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3" />
                </CollectionView.ItemsLayout>
            </CollectionView>

            <!--  Add Plant Button  -->
            <Button
                Command="{Binding AddPlantCommand}"
                HorizontalOptions="Center"
                Text="Add plant" />

            <!--<Button Command="{Binding SetWateringReminderCommand}" Text="Set Reminder" />-->
            <!--<Button Command="{Binding CancelWateringReminderCommand}" Text="Cancel Reminder" />-->
        </VerticalStackLayout>
    </ScrollView>
</views:ContentPageBase>