<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="PlantCare.App.Views.PlantOverviewView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlantCare.App.Components"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:utils="clr-namespace:PlantCare.App.Utils"
    xmlns:views="clr-namespace:PlantCare.App.Views"
    xmlns:vm="clr-namespace:PlantCare.App.ViewModels"
    x:Name="thisPage"
    x:DataType="vm:PlantListOverviewViewModel">

    <Shell.TitleView>
        <Grid
            Padding="12,0,8,0"
            ColumnDefinitions="auto,*,auto"
            ColumnSpacing="12">
            <!--  App Icon  -->
            <Border
                HorizontalOptions="Start"
                Stroke="Transparent"
                StrokeThickness="0"
                VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource Primary}"
                        Opacity="0.15"
                        Radius="8"
                        Offset="0,2" />
                </Border.Shadow>
                <Image
                    HeightRequest="44"
                    Source="default_plant.png"
                    WidthRequest="44" />
            </Border>

            <!--  Title Section  -->
            <VerticalStackLayout
                Grid.Column="1"
                Spacing="2"
                VerticalOptions="Center">
                <Label
                    Style="{StaticResource TitleSmallStyle}"
                    Text="{Binding Path=[MyPlants], Source={x:Static utils:LocalizationManager.Instance}}"
                    VerticalTextAlignment="Center" />
                <StackLayout Orientation="Horizontal" Spacing="3">
                    <Label
                        Opacity="0.7"
                        Style="{StaticResource CaptionStyle}"
                        Text="{Binding Plants.Count}"
                        VerticalTextAlignment="Center" />
                    <Label
                        Opacity="0.7"
                        Style="{StaticResource CaptionStyle}"
                        Text="{Binding Path=[PlantsCount], Source={x:Static utils:LocalizationManager.Instance}}"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </VerticalStackLayout>

            <!--  Add Plant Button  -->
            <Button
                x:Name="fabButton"
                Grid.Column="2"
                Margin="0"
                Command="{Binding AddPlantCommand}"
                CornerRadius="22"
                HeightRequest="44"
                HorizontalOptions="End"
                Style="{StaticResource FabButtonStyle}"
                Text="&#xe147;"
                TextColor="{StaticResource White}"
                VerticalOptions="Center"
                WidthRequest="44">
                <Button.Shadow>
                    <Shadow
                        Brush="{StaticResource Primary}"
                        Opacity="0.3"
                        Radius="12"
                        Offset="0,4" />
                </Button.Shadow>
            </Button>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <utils:ProgressToColorConverter x:Key="ProgressToColorConverter" />
        <utils:LessThanConverter x:Key="LessThanConverter" />

        <Style x:Key="ProgressIndicatorStyle" TargetType="ProgressBar">
            <Setter Property="HeightRequest" Value="6" />
            <Setter Property="ProgressColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}" />
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="{StaticResource SuccessColor}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="VerticalOptions" Value="Start" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="8" />
            </Setter>
        </Style>
    </ContentPage.Resources>

    <!--  Main Layout  -->
    <Grid Padding="12,8,12,0">

        <Grid
            HorizontalOptions="Fill"
            RowDefinitions="auto,*"
            RowSpacing="12">
            <!--  Enhanced Search Bar  -->
            <Border Margin="0" Style="{StaticResource EnhancedSearchBarStyle}">
                <SearchBar
                    BackgroundColor="Transparent"
                    CancelButtonColor="{AppThemeBinding Light={StaticResource Gray900},
                                                        Dark={StaticResource Gray100}}"
                    Placeholder="{Binding Path=[SearchPlantByName], Source={x:Static utils:LocalizationManager.Instance}}"
                    PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600},
                                                       Dark={StaticResource Gray400}}"
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding SearchText}"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                Dark={StaticResource White}}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </Border>

            <!--  Plants Collection View  -->
            <RefreshView
                Grid.Row="1"
                Command="{Binding RefreshPlantStatesCommand}"
                IsRefreshing="{Binding IsPlantStatesRefreshing}">
                <CollectionView
                    ItemsSource="{Binding Plants}"
                    ItemsUpdatingScrollMode="KeepItemsInView"
                    RemainingItemsThreshold="10"
                    SelectedItem="{Binding SelectedPlant, Mode=TwoWay}"
                    SelectionChangedCommand="{Binding SelectPlantCommand}"
                    SelectionMode="Single">

                    <!--  Empty State View  -->
                    <CollectionView.EmptyView>
                        <Grid>
                            <!--  Show skeleton cards while loading  -->
                            <ScrollView IsVisible="{Binding IsLoading}">
                                <Grid Padding="4" RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Row 1  -->
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />

                                    <!--  Row 2  -->
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />

                                    <!--  Row 3  -->
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                    <components:SkeletonCardView
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="4"
                                        ImageHeight="{Binding PhotoHeight}"
                                        ImageWidth="{Binding PhotoWidth}" />
                                </Grid>
                            </ScrollView>

                            <!--  Show empty state when not loading and no plants  -->
                            <components:EmptyStateView
                                Title="{Binding Path=[NoPlants], Source={x:Static utils:LocalizationManager.Instance}}"
                                ActionCommand="{Binding AddPlantCommand}"
                                ActionText="{Binding Path=[AddPlant], Source={x:Static utils:LocalizationManager.Instance}}"
                                HasAction="True"
                                IconSource="default_plant.png"
                                IsVisible="{Binding IsLoading, Converter={toolkit:InvertedBoolConverter}}"
                                Message="{Binding Path=[AddMyPlants], Source={x:Static utils:LocalizationManager.Instance}}" />
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="12"
                            Orientation="Vertical"
                            Span="{Binding Source={x:Reference thisPage}, Path=BindingContext.PhotoSpan}"
                            VerticalItemSpacing="12" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:PlantListItemViewModel">
                            <Grid HorizontalOptions="Center">
                                <!--  Enhanced Plant Card  -->
                                <Border Padding="0" Style="{StaticResource InteractiveCardStyle}">
                                    <Grid RowDefinitions="auto,auto,auto">
                                        <!--  Plant Image Container  -->
                                        <Grid>
                                            <!--  Plant Photo  -->
                                            <Border
                                                Margin="0"
                                                HorizontalOptions="Fill"
                                                Stroke="Transparent"
                                                StrokeThickness="0"
                                                VerticalOptions="Fill">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="16,16,0,0" />
                                                </Border.StrokeShape>
                                                <Image
                                                    Aspect="AspectFill"
                                                    HeightRequest="{Binding Source={RelativeSource AncestorType={x:Type vm:PlantListOverviewViewModel}}, Path=PhotoHeight}"
                                                    HorizontalOptions="Fill"
                                                    Source="{Binding ThumbnailPath}"
                                                    VerticalOptions="Fill"
                                                    WidthRequest="{Binding Source={RelativeSource AncestorType={x:Type vm:PlantListOverviewViewModel}}, Path=PhotoWidth}" />
                                            </Border>

                                            <!--  Status Badge Overlay  -->
                                            <Border
                                                Margin="2,2"
                                                Padding="10,5"
                                                BackgroundColor="{Binding WaterState, Converter={StaticResource ProgressToColorConverter}}"
                                                HorizontalOptions="Start"
                                                IsVisible="{Binding WaterState, Converter={StaticResource LessThanConverter}, ConverterParameter=0.143}"
                                                Opacity="0.85"
                                                StrokeThickness="0"
                                                VerticalOptions="End">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="10" />
                                                </Border.StrokeShape>
                                                <Border.Shadow>
                                                    <Shadow
                                                        Brush="Black"
                                                        Opacity="0.2"
                                                        Radius="6"
                                                        Offset="0,2" />
                                                </Border.Shadow>
                                                <Label
                                                    FontFamily="MaterialIconsRegular"
                                                    FontSize="15"
                                                    Text="&#xe798;"
                                                    TextColor="{StaticResource White}"
                                                    VerticalOptions="Center" />
                                            </Border>
                                        </Grid>

                                        <!--  Plant Info Section  -->
                                        <VerticalStackLayout
                                            Grid.Row="1"
                                            Padding="12"
                                            Spacing="8">

                                            <!--  Plant Name  -->
                                            <Label
                                                FontFamily="OpenSansSemibold"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="2"
                                                Style="{StaticResource TitleSmallStyle}"
                                                Text="{Binding Name}" />

                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!--  Loading overlay for non-initial operations  -->
        <components:LoadingOverlayView IsVisible="{Binding IsLoading}" />
    </Grid>
</views:ContentPageBase>
