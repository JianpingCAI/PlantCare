<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlantCare.App.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AboutPage">
    <StackLayout Padding="10">
        <Label
            Style="{StaticResource TitleLargeStyle}"
            FontAttributes="Bold"
            Text="About PlantCare App" />
        <Label 
            Style="{StaticResource BodyStyle}"
            Margin="0,10,0,0" 
            Text="PlantCare helps you take care of your plants by providing reminders and tips for watering and fertilization." />
        <Label
            Style="{StaticResource BodySmallStyle}"
            Margin="0,10,0,0"
            FontAttributes="Italic"
            Text="Version 1.0" />
    </StackLayout>
</ContentPage>
