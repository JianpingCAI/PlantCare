<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlantCare.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:strings="clr-namespace:PlantCare.App.Resources"
    xmlns:styles="clr-namespace:PlantCare.App.Resources.Styles"
    xmlns:utils="clr-namespace:PlantCare.App.Utils"
    xmlns:views="clr-namespace:PlantCare.App.Views"
    Title="PlantCare.App"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundColor},
                                            Dark={StaticResource PageBackgroundColorDark}}"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource Gray900},
                                            Dark={StaticResource White}}"
    Shell.TitleColor="{AppThemeBinding Light={StaticResource Gray900},
                                       Dark={StaticResource White}}">
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
                <Setter Property="Shell.TabBarTitleColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryLight}}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <Shell.TitleView>
        <Grid ColumnDefinitions="auto,*">
            <Border
                Margin="5,0,0,0"
                HorizontalOptions="Start"
                Stroke="Transparent"
                StrokeThickness="0"
                VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                <Label
                    FontFamily="MaterialIconsRegular"
                    FontSize="40"
                    Text="{x:Static styles:MaterialIconFont.Plant}"
                    TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                Dark={StaticResource PrimaryLight}}"
                    VerticalOptions="Center" />
            </Border>

            <Label
                x:Name="pageTitle"
                Grid.Column="1"
                Margin="15,0,0,0"
                FontSize="Medium"
                HorizontalOptions="Start"
                VerticalTextAlignment="Center" />
        </Grid>
    </Shell.TitleView>

    <TabBar>

        <!--  Home  -->
        <ShellContent
            x:Name="tabHome"
            Title="{Binding Path=[Home], Source={x:Static utils:LocalizationManager.Instance}, Mode=OneTime}"
            ContentTemplate="{DataTemplate views:PlantOverviewView}"
            Route="overview">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsRegular"
                    Glyph="{x:Static styles:MaterialIconFont.PottedPlant}"
                    Color="{AppThemeBinding Light={StaticResource Primary},
                                            Dark={StaticResource PrimaryLight}}" />
            </ShellContent.Icon>
        </ShellContent>

        <!--  Care Schedule  -->
        <ShellContent
            x:Name="tabCalendar"
            Title="{Binding Path=[Care], Source={x:Static utils:LocalizationManager.Instance}, Mode=OneTime}"
            ContentTemplate="{DataTemplate views:PlantCalendarView}"
            Route="calendar">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsRegular"
                    Glyph="{x:Static styles:MaterialIconFont.CheckDone}"
                    Color="{AppThemeBinding Light={StaticResource Primary},
                                            Dark={StaticResource PrimaryLight}}" />
            </ShellContent.Icon>
        </ShellContent>

        <!--  History  -->
        <ShellContent
            x:Name="tabHistory"
            Title="{Binding Path=[History], Source={x:Static utils:LocalizationManager.Instance}, Mode=OneTime}"
            ContentTemplate="{DataTemplate views:CareHistoryView}"
            Route="careHistory">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsRegular"
                    Glyph="{x:Static styles:MaterialIconFont.EventNote}"
                    Color="{AppThemeBinding Light={StaticResource Primary},
                                            Dark={StaticResource PrimaryLight}}" />
            </ShellContent.Icon>
        </ShellContent>

        <!--  Settings  -->
        <ShellContent
            x:Name="tabSettings"
            Title="{Binding Path=[Settings], Source={x:Static utils:LocalizationManager.Instance}, Mode=OneTime}"
            ContentTemplate="{DataTemplate views:SettingsView}"
            Route="settings">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="MaterialIconsRegular"
                    Glyph="{x:Static styles:MaterialIconFont.Settings}"
                    Color="{AppThemeBinding Light={StaticResource Primary},
                                            Dark={StaticResource PrimaryLight}}" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>
