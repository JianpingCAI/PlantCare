<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlantCare.App.Components.SkeletonGridCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlantCare.App.Components"
    x:Name="Root">

    <Border
        Margin="4"
        Padding="0"
        Style="{StaticResource InteractiveCardStyle}">
        <Grid RowDefinitions="auto,auto">
            <!--  Image Placeholder  -->
            <Border
                Margin="0"
                HorizontalOptions="Fill"
                Stroke="Transparent"
                StrokeThickness="0"
                VerticalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12,12,0,0" />
                </Border.StrokeShape>
                <components:ShimmerView
                    ShimmerHeight="{Binding PhotoHeight, Source={x:Reference Root}}"
                    ShimmerWidth="{Binding PhotoWidth, Source={x:Reference Root}}"
                    CornerRadius="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
            </Border>

            <!--  Text Placeholder  -->
            <components:ShimmerView
                Grid.Row="1"
                ShimmerHeight="18"
                CornerRadius="4"
                HorizontalOptions="Center"
                Margin="10,8"
                ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
        </Grid>
    </Border>
</ContentView>
