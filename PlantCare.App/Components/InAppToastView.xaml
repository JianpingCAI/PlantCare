<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlantCare.App.Components.InAppToastView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">

    <Grid VerticalOptions="End" HorizontalOptions="Fill" Margin="16,0,16,80">
        <Border
            x:Name="ToastContainer"
            Padding="16,12"
            BackgroundColor="#4CAF50"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Opacity="0"
            TranslationY="50"
            Stroke="Transparent"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.2" Radius="4" Offset="0,2" />
            </Border.Shadow>
            
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12" MinimumWidthRequest="200">
                <!-- Icon -->
                <Label
                    x:Name="ToastIcon"
                    FontFamily="MaterialIconsRegular"
                    FontSize="24"
                    TextColor="White"
                    VerticalOptions="Center" />
                
                <!-- Message -->
                <Label
                    x:Name="ToastMessage"
                    Grid.Column="1"
                    FontFamily="OpenSansRegular"
                    FontSize="14"
                    TextColor="White"
                    VerticalOptions="Center"
                    MaxLines="2"
                    LineBreakMode="TailTruncation" />
                
                <!-- Dismiss Button (optional) -->
                <Label
                    Grid.Column="2"
                    x:Name="DismissButton"
                    FontFamily="MaterialIconsRegular"
                    FontSize="20"
                    Text="&#xe5cd;"
                    TextColor="White"
                    VerticalOptions="Center"
                    IsVisible="False"
                    Opacity="0.7">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDismissTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
        </Border>
    </Grid>
</ContentView>
