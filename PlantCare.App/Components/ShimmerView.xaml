<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlantCare.App.Components.ShimmerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Border
        x:Name="ShimmerBorder"
        BackgroundColor="{Binding ShimmerColor, Source={x:Reference Root}}"
        HeightRequest="{Binding ShimmerHeight, Source={x:Reference Root}}"
        WidthRequest="{Binding ShimmerWidth, Source={x:Reference Root}}"
        StrokeThickness="0"
        HorizontalOptions="{Binding HorizontalOptions, Source={x:Reference Root}}"
        VerticalOptions="{Binding VerticalOptions, Source={x:Reference Root}}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{Binding CornerRadius, Source={x:Reference Root}}" />
        </Border.StrokeShape>
    </Border>
</ContentView>
