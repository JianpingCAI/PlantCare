<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlantCare.App.Components.SkeletonCareHistoryCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlantCare.App.Components"
    x:Name="Root">

    <Border
        Margin="0,2,0,2"
        StrokeThickness="1">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5" />
        </Border.StrokeShape>
        <Grid ColumnDefinitions="*,auto" HorizontalOptions="Fill">
            <!--  Left side - Chart placeholder  -->
            <Grid Padding="12">
                <VerticalStackLayout Spacing="8">
                    <!--  Title placeholder  -->
                    <components:ShimmerView
                        ShimmerHeight="14"
                        ShimmerWidth="80"
                        CornerRadius="4"
                        HorizontalOptions="Start"
                        ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
                    
                    <!--  Chart placeholder  -->
                    <components:ShimmerView
                        ShimmerHeight="60"
                        CornerRadius="4"
                        ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
                    
                    <!--  Frequency info placeholder  -->
                    <components:ShimmerView
                        ShimmerHeight="14"
                        ShimmerWidth="120"
                        CornerRadius="4"
                        HorizontalOptions="Start"
                        ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
                </VerticalStackLayout>
            </Grid>

            <!--  Right side - Photo placeholder  -->
            <Border
                Grid.Column="1"
                StrokeThickness="1"
                VerticalOptions="Center"
                Margin="0,12,12,12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <components:ShimmerView
                    ShimmerHeight="120"
                    ShimmerWidth="90"
                    CornerRadius="5"
                    ShimmerColor="{AppThemeBinding Light=#E8E8E8, Dark=#3A3A3A}" />
            </Border>
        </Grid>
    </Border>
</ContentView>
