<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlantCare.App.Components.LoadingOverlayView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root">

    <Grid BackgroundColor="{AppThemeBinding Light=#80F5F5F5, Dark=#80333333}">
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="16"
            VerticalOptions="Center">

            <!--  Animated Loading Indicator  -->
            <Border
                BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                  Dark={StaticResource Gray900}}"
                HeightRequest="80"
                HorizontalOptions="Center"
                StrokeThickness="0"
                WidthRequest="80">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.15"
                        Radius="16"
                        Offset="0,4" />
                </Border.Shadow>
                <ActivityIndicator
                    x:Name="LoadingIndicator"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    IsRunning="True"
                    VerticalOptions="Center"
                    WidthRequest="40"
                    Color="{StaticResource Primary}" />
            </Border>

            <!--  Optional Loading Text  -->
            <Label
                x:Name="LoadingLabel"
                FontFamily="OpenSansRegular"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding ShowLoadingText, Source={x:Reference Root}}"
                Text="{Binding LoadingText, Source={x:Reference Root}}"
                TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                            Dark={StaticResource Gray400}}" />
        </VerticalStackLayout>
    </Grid>
</ContentView>
